{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "ignorePackages"
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "semi": true,
                "singleQuote": true,
                "trailingComma": "es5",
                "tabWidth": 4
            }
        ],
        "no-underscore-dangle": "off",
        "no-console": "off",
        "no-param-reassign": "off",
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2020
    }
}